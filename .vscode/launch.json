{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-test/src/test/testExe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
            "preLaunchTask": "Build Tests"
          },
          {
            "name": "Pico Debug (Cortex-Debug)",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build-pico-Debug/src/main/Host/host.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "gdbPath": "gdb-multiarch", // Or your specific GDB path
            "device": "RP2040",
            "configFiles": [
                "interface/cmsis-dap.cfg", // Or your debug probe's interface config
                "target/rp2040.cfg"
            ],
            "openOCDLaunchCommands": ["adapter speed 5000"],
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/RP2040.svd", // Path to RP2040 SVD file
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw", // Optional, for verbose debug output
            "preLaunchTask": "Build Debug"
          }
    ]
}